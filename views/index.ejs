<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <%- include partials/head.ejs %>
    <%- include partials/jsdefaults.ejs %>
</head>
<body>
    <div class="container">
        <div class="col-md-12">
            <h1>NYT Lib</h1>
        </div>
        <div class="col-md-3">

            <ul class="nav nav-pills nav-stacked">
                <li><a href="#">Bookshelf</a></li>
                <li><a href="#">Combined Fiction</a></li>
                <li><a href="#">Combined Nonfiction</a></li>
            </ul>

        </div>
        <div class="col-md-9">

            <h3>Bestsellers for <%= title %></h3>

            <% for(var i=0; i<parseInt(books.length/3); i++) {%>
                <div class="row clearfix">
                    <div class="col-md-12 column">
                    <% for(var j=i*3; j<(i*3)+3; j++) {%>
                        
                        <li class="book">
                            <div class="col-md-4">
                            <div class="thumbnail">
                                <img src="<%= books[j].book_image %>" />
                                <div class="caption">
                                    <h4>
                                       <%= books[j].title %>
                                    </h4>
                                    <h5>
                                        <%= books[j].author %>
                                    </h5>
                                    <p>
                                        <%= books[j].description %>
                                    </p>
                                    <p>
                                        <a class="btn btn-primary" href="#">Action</a> <a class="btn" href="#">Action</a>
                                    </p> 
                                </div>
                            </div>
                            </div>
                        </li>
                    <% } %>
                    </div>
                </div>
            <% } %>
            <% if(books.length % 3 != 0) {%>
                <div class="row clearfix">
                <div class="col-md-12 column">
                <% for(var j=parseInt(books.length/3)*3; j<parseInt(books.length/3)*3 + (books.length % 3); j++) {%>
                    <li class="book">
                        <div class="col-md-4">
                        <div class="thumbnail">
                            <img src="<%= books[j].book_image %>" />
                            <div class="caption">
                                <h4>
                                   <%= books[j].title %>
                                </h4>
                                <h5>
                                    <%= books[j].author %>
                                </h5>
                                <p>
                                    <%= books[j].description %>
                                </p>
                                 <p>
                                    <a class="btn btn-primary" href="#">Action</a> <a class="btn" href="#">Action</a>
                                </p>
                            </div>
                        </div>
                        </div>
                    </li> 
                <% } %>
                </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>
