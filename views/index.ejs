<!DOCTYPE html>
<html>
<head>
    <title>Bestsellers</title>
    <%- include partials/head.ejs %>
    <%- include partials/jsdefaults.ejs %>
</head>
<body>
    <div class="container">
        <div class="col-md-12">
            <h1>NYT Lib</h1>
        </div>
        <div class="col-md-3">
            <div id="navigation_float">
                <h3>Navigation</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="#">Bookshelf</a></li>
                    <li><a href="#">Bestseller Lists</a></li>
                </ul>

                <h3>Bestseller Lists</h3>
                <ul class="nav nav-pills nav-stacked">
                    <% for(var list_index=0; list_index<lists.length; list_index++) { %>
                        <li><a href="#category_<%= list_index %>"><%= lists[list_index]['title'] %></a></li>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="col-md-9">
            <% for(var list_index=0; list_index<lists.length; list_index++) { %>
                <%
                    var title = lists[list_index]['title'];
                    var books = lists[list_index]['books'];
                %>
                <div class="col-md-12 column">

                <div class="row clearfix" id="category_<%= list_index %>">
                    <div class="col-md-12 column">
                        <h3><%= title %></h3>
                    </div>
                </div>

                <% for(var i=0; i<parseInt(books.length/3); i++) {%>
                    <div class="row clearfix">
                        <div class="col-md-12 column">
                        <% for(var j=i*3; j<(i*3)+3; j++) {%>
                            <%
                            var book_img = '';
                            if(books[j].book_image != null ) {
                                book_img = books[j].book_image
                            }
                            %>
                            <li class="book">
                                <div class="col-md-4">
                                <div class="thumbnail">
                                    <img src="<%= book_img %>" />
                                    <div class="caption">
                                        <h4>
                                           <%= books[j].title %>
                                        </h4>
                                        <h5>
                                            <%= books[j].author %>
                                        </h5>
                                        <p>
                                            <%= books[j].description %>
                                        </p>
                                        <p>
                                            <a class="btn btn-primary" href="#">Action</a> <a class="btn" href="#">Action</a>
                                        </p>
                                    </div>
                                </div>
                                </div>
                            </li>
                        <% } %>
                        </div>
                    </div>
                <% } %>
                <% if(books.length % 3 != 0) {%>
                    <div class="row clearfix">
                    <div class="col-md-12 column">
                    <% for(var j=parseInt(books.length/3)*3; j<parseInt(books.length/3)*3 + (books.length % 3); j++) {%>
                        <%
                        var book_img = '';
                        if(books[j].book_image != null ) {
                            book_img = books[j].book_image
                        }
                        %>

                        <li class="book">
                            <div class="col-md-4">
                            <div class="thumbnail">
                                <img src="<%= book_img %>" />
                                <div class="caption">
                                    <h4>
                                       <%= books[j].title %>
                                    </h4>
                                    <h5>
                                        <%= books[j].author %>
                                    </h5>
                                    <p>
                                        <%= books[j].description %>
                                    </p>
                                     <p>
                                        <a class="btn btn-primary" href="#">Action</a> <a class="btn" href="#">Action</a>
                                    </p>
                                </div>
                            </div>
                            </div>
                        </li>
                    <% } %>
                    </div>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</body>
</html>
